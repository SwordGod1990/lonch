<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_EFEFF4">

    <RelativeLayout
        android:layout_width="@dimen/size348"
        android:layout_height="@dimen/size356"
        android:background="@drawable/public_discount_white_xrv"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_goodsEnquiryDiscount_iv"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/item_goodsEnquiryDiscount_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryDiscount_iv"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginTop="@dimen/size20"
            android:text="阿莫西林胶囊阿莫西..."
            android:textColor="@color/color_333"
            android:textSize="@dimen/txt15" />

        <TextView
            android:id="@+id/item_goodsEnquiryDiscount_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryDiscount_name_tv"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginTop="@dimen/size12"
            android:text="9件即享优惠价」"
            android:textColor="@color/color_999"
            android:textSize="@dimen/txt13" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryDiscount_count_tv"
            android:layout_marginTop="@dimen/size16">

            <TextView
                android:id="@+id/item_goodsEnquiryDiscount_moneySign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_goodsEnquiryDiscount_money_tv"
                android:layout_marginLeft="@dimen/size20"
                android:text="@string/money_unit"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/txt13" />

            <TextView
                android:id="@+id/item_goodsEnquiryDiscount_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_goodsEnquiryDiscount_moneySign_tv"
                android:text="23.56"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/txt18" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_goodsEnquiryDiscount_money_tv"
                android:layout_marginLeft="@dimen/size14"
                android:layout_toRightOf="@+id/item_goodsEnquiryDiscount_money_tv">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥56.00"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/txt14" />

                <TextView
                    android:layout_width="@dimen/size110"
                    android:layout_height="@dimen/size1"
                    android:layout_centerVertical="true"
                    android:background="@color/color_999" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_goodsEnquiryDiscount_car_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size20"
                android:src="@drawable/car" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
