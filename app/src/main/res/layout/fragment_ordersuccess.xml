<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar_ll"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/frg_orderSuccess_show_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/frg_orderSuccess_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size30"
            android:text="@string/order_success"
            android:textColor="@color/color_333"
            android:textSize="@dimen/txt15" />

        <ImageView
            android:id="@+id/frg_orderSuccess_lookOrder_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size40"
            android:src="@drawable/button" />
    </LinearLayout>
</RelativeLayout>
