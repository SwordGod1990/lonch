<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_bottomOrder_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size96"
    android:layout_alignParentBottom="true"
    android:background="@color/color_white">


    <RelativeLayout
        android:id="@+id/view_bottom_rl"
        android:layout_width="70dp"
        android:layout_height="@dimen/size96">

        <ImageView
            android:id="@+id/view_bottom_msg_img"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bill" />

        <TextView
            android:id="@+id/view_bottom_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_bottom_msg_img"
            android:layout_centerHorizontal="true"
            android:text="清单列表"
            android:textColor="@color/color_666"
            android:textSize="@dimen/txt10" />

        <TextView
            android:id="@+id/view_bottom_msgNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size10"
            android:layout_toRightOf="@+id/view_bottom_msg_img"
            android:background="@drawable/red_bubble_bg"
            android:gravity="center"
            android:text="11"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/view_bottom_line"
        android:layout_width="@dimen/size2"
        android:layout_height="@dimen/size40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size140"
        android:background="@color/color_E5E5E5" />

    <TextView
        android:id="@+id/view_bottom_content01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size28"
        android:layout_toRightOf="@+id/view_bottom_line"
        android:text="共"
        android:textColor="@color/color_666"
        android:textSize="@dimen/txt15" />

    <TextView
        android:id="@+id/view_bottom_goodsNum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view_bottom_content01"
        android:text="15"
        android:textColor="@color/color_EB3E2D"
        android:textSize="@dimen/txt15" />

    <TextView
        android:id="@+id/view_bottom_content02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view_bottom_goodsNum_tv"
        android:text="种药品"
        android:textColor="@color/color_666"
        android:textSize="@dimen/txt15" />

    <TextView
        android:id="@+id/view_bottom_lookBill_tv"
        android:layout_width="@dimen/size226"
        android:layout_height="@dimen/size96"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_btn"
        android:gravity="center"
        android:text="查看清单"
        android:textColor="@color/color_white"
        android:textSize="@dimen/txt18" />
</RelativeLayout>
